.PHONY: all
.SUFFIXES:
MAKEFLAGS+=" -r "

EXE_DIR=EXE
OBJ_DIR=OBJ

DIRS=$(EXE_DIR) $(OBJ_DIR)

CPPSOURCES=$(shell find * -type f -name "*.c++")
CSOURCES+=$(shell find * -type f -name "*.c")

OBJECTS=$(CPPSOURCES:%.c++=$(OBJ_DIR)/%.o)
OBJECTS+=$(CSOURCES:%.c=$(OBJ_DIR)/%.o)

EXES=$(CPPSOURCES:%.c++=$(EXE_DIR)/%)
EXES+=$(CSOURCES:%.c=$(EXE_DIR)/%)

all: $(EXES)

$(OBJ_DIR)/%.o: %.c++ | $(OBJ_DIR)
	g++ -c -Wall -Weffc++ -Wextra -Werror -pedantic -std=c++11 $< -o $@ -ggdb -D_GLIBCXX_DEBUG

$(OBJ_DIR)/%.o: %.c | $(OBJ_DIR)
	gcc -c -Wall -Wextra -Werror -pedantic -std=c99 $< -o $@ -ggdb -D_GLIBCXX_DEBUG

$(EXE_DIR)/%: $(OBJ_DIR)/%.o | $(EXE_DIR)
	g++ -Wall -Weffc++ -Wextra -Werror -pedantic -std=c++11 $< -o $@ -ggdb -D_GLIBCXX_DEBUG

$(DIRS):
	mkdir -p $@

clean:
	rm -r $(EXES)
